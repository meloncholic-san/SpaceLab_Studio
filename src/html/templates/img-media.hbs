<picture class="{{pictureClass}}">
  {{#each sizes}}
    <source
      type="image/{{../imgType}}"
      media="{{lookup ../mediaQueries @index}}"
      {{#if (eq ../loading "eager")}}
        srcset="{{../basePath}}-{{this}}.{{../imgType}}"
      {{else}}
        data-srcset="{{../basePath}}-{{this}}.{{../imgType}}"
      {{/if}} />
  {{/each}}

  <img
    {{#if (eq loading "eager")}}
      src="{{basePath}}-{{lastSize}}.{{imgType}}"
    {{else}}
      data-src="{{basePath}}-{{lastSize}}.{{imgType}}"
    {{/if}}
    alt="{{alt}}"
    loading="{{#if loading}}{{loading}}{{else}}lazy{{/if}}"
  />
</picture>
